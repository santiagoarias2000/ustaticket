@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "Listo of Cinema";
}

<div class="row">
    <div class="col-md-12 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr class="text-center">
                        <td><img src="@Html.DisplayFor(mi => cinema.Logo)" alt="@Html.DisplayFor(mi => cinema.Logo)" width="100px" height="100px" class="rounded-circle" /></td>
                        <td class="align-middle">@Html.DisplayFor(mi => cinema.Name)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => cinema.Description)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
